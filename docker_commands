# We have to create the network am-network

# Parser + Network & Traffic Generator
docker run -v /home/alex/Desktop/jobs/hootsuite/challenge/:/usr/src/app -e HOST='am-db' -e USER='root' -e PASSWORD='password' -e DB='network_data' --network am-network --name am-analyzer am-network-analyzer

# Create the MySQL database
docker run --name am-db --network am-network -e MYSQL_ROOT_PASSWORD=password -d mysql

# Create a MySQL instance
docker run -it --network challenge_default --rm mysql mysql -hchallenge_am-db_1 -uroot -p

# Prometheus Back-End Exporter
docker run -d -p 9104:9104 --network am-network -e DATA_SOURCE_NAME="root:password@(am-db:3306)/network_data" --name am-db-exporter prom/mysqld-exporter

# Prometheus Front-End
docker run -p 9090:9090 -v /home/alex/Desktop/jobs/hootsuite/challenge/prometheus.yml:/etc/prometheus/prometheus.yml --network am-network --name am-prometheus prom/prometheus

docker-compose down -v
docker-compose build
docker-compose start

database:
TIMESTAMP IP2 PORT1


